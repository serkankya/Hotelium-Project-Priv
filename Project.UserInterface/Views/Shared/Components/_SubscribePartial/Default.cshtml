@model SubscriberInsertDto

@if (TempData["SuccessfullSubscription"] != null)
{
	<script>
		window.onload = function () {
			alert('@TempData["SuccessfullSubscription"]');
		};
	</script>
}

<div class="container newsletter mt-5 wow fadeIn" data-wow-delay="0.1s">
	<div class="row justify-content-center">
		<div class="col-lg-10 border rounded p-1">
			<div class="border rounded text-center p-1">
				<div class="bg-white rounded text-center p-5">
					<h4 class="mb-4">Mail Bültenimize <span class="text-primary text-uppercase"> Kayıt Olun</span></h4>
					<div class="position-relative mx-auto" style="max-width: 400px;">

						<form method="post" asp-action="InsertSubscription" asp-controller="Default">
							<input class="form-control w-100 py-3 ps-4 pe-5" type="text" asp-for="Mail" placeholder="Mail adresinizi giriniz">
							<span asp-validation-for="Mail" class="text-danger"></span>
							<button type="submit" class="btn btn-primary py-2 px-3 position-absolute top-0 end-0 mt-2 me-2">Kayıt Ol</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>
